name: Check for Comments in PR

on:
  pull_request:
    types: [opened, synchronize, reopened]

jobs:
  check-comments:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v4
        with:
          fetch-depth: 0  # ensure full history is fetched

      - name: Check added code for comments
        run: |
          echo "Base SHA: ${{ github.event.pull_request.base.sha }}"
          echo "Head SHA: ${{ github.sha }}"

          # Get only added lines in the PR diff
          added_lines=$(git diff ${{ github.event.pull_request.base.sha }} ${{ github.sha }} | grep '^+' | grep -v '+++')

          echo "Added lines:"
          echo "$added_lines"

          # Look for common comment patterns
          if echo "$added_lines" | grep -E '(^\+\s*//|^\+\s*#|^\+\s*/\*|^\+\s*\*)' > /dev/null; then
            echo "✅ Found comments in added code."
          else
            echo "❌ No comments found in the added code."
            exit 1
          fi
